# Production Environment
NODE_ENV=production
DEBUG=false

# Production Database (to be configured)
DATABASE_URL=postgresql://user:password@prod-db-host:5433/xm_port
DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@prod-db-host:5433/xm_port

# Production Redis (to be configured)
REDIS_URL=redis://prod-redis-host:6379/0

# Production Security (strict)
# SECRET_KEY must be set to a secure random value
# NEXTAUTH_SECRET must be set to a secure random value

# AWS Configuration
AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID must be set
# AWS_SECRET_ACCESS_KEY must be set
# AWS_S3_BUCKET must be set

# Monitoring
LOG_LEVEL=INFO
# SENTRY_DSN should be configured for error tracking

# Production features
ENABLE_SWAGGER=false
ENABLE_METRICS=true